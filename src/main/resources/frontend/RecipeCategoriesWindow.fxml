<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="300.0"
            xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="frontend.RecipeCategoriesWindowController">
    <GridPane prefHeight="400.0" prefWidth="300.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="218.0"
                               minWidth="10.0" prefWidth="59.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="218.0"
                               minWidth="10.0" prefWidth="141.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="145.0"
                               minWidth="10.0" prefWidth="102.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints maxHeight="129.0" minHeight="0.0" prefHeight="32.0"
                            vgrow="SOMETIMES"/>
            <RowConstraints maxHeight="303.0" minHeight="10.0" prefHeight="47.0"
                            vgrow="SOMETIMES"/>
            <RowConstraints maxHeight="320.0" minHeight="10.0"
                            prefHeight="320.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <TextField fx:id="recipeCategoryIDTextField" disable="true"
                   onAction="#enterPressedOnTextFields" prefHeight="25.0"
                   prefWidth="102.0" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets left="5.0" right="5.0"/>
            </GridPane.margin>
        </TextField>
        <TextField fx:id="recipeCategoryNameTextField" disable="true"
                   onAction="#enterPressedOnTextFields"
                   onKeyTyped="#updateNewShownID" prefHeight="25.0"
                   prefWidth="108.0" GridPane.columnIndex="1"
                   GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets left="5.0" right="5.0"/>
            </GridPane.margin>
        </TextField>
        <TableView fx:id="recipeCategoryTable"
                   onMouseClicked="#enableChangeButton" prefHeight="200.0"
                   prefWidth="200.0" GridPane.columnSpan="2"
                   GridPane.rowIndex="2">
            <columns>
                <TableColumn fx:id="recipeCategoryTableIDColumn"
                             prefWidth="49.0" text="ID"/>
                <TableColumn fx:id="recipeCategoryTableNameColumn"
                             prefWidth="148.0"
                             text="%recipeCatTable.recipeCategories"/>
            </columns>
        </TableView>
        <GridPane GridPane.columnIndex="2" GridPane.rowIndex="2">
            <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES"
                                   minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0"
                                vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0"
                                vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0"
                                vgrow="SOMETIMES"/>
            </rowConstraints>
            <Button mnemonicParsing="false" onAction="#newCategoryClick"
                    text="%recipeCatTable.newCategory"/>
            <Button fx:id="recipeCategoryChangeButton" disable="true"
                    mnemonicParsing="false"
                    onAction="#changeCategoryClick"
                    text="%recipeCatTable.changeCategory"
                    GridPane.rowIndex="1"/>
            <Button fx:id="recipeCategoryDeleteButton" disable="true"
                    mnemonicParsing="false"
                    onAction="#deleteCategoryClick"
                    text="%recipeCatTable.deleteCategory"
                    GridPane.rowIndex="2"/>
        </GridPane>
    </GridPane>
</AnchorPane>
