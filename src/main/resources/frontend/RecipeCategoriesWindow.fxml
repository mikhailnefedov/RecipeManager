        </TableView>
         <Button fx:id="recipeCategoryNewButton" maxHeight="30.0" maxWidth="1.7976931348623157E308" minHeight="20.0" mnemonicParsing="false" onAction="#newCategoryClick" prefHeight="20.0" stylesheets="@stylesheets/RecipeCategoriesWindow.css" text="%recipeCatTable.newCategory">
